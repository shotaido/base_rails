CR: List of questions
<br><br>

<style>
table, th, td {
  border: 1px solid black;
}
</style>

<table>
    <tr>
        <th>source</th>
        <th>edition</th>
        <th>question type</th>
        <th>difficulty</th>
        <th>question no</th>
        <th>text 1</th>
        <th>text 2</th>
        <th>action</th>
    </tr>
    <% Problemcr.all.order(id: :ASC).each do |cr| %>
    <tr>
        <td><%= cr.source %></td>
        <td><%= cr.edition %></td>
        <td><%= cr.question_type %></td>
        <td><%= cr.difficulty %></td>
        <td><%= cr.question_no %></td>
        <td><%= truncate(cr.original_text_1, :length => 100, :separator => ' ') %></td>
        <td><%= truncate(cr.original_text_2, :length => 100, :separator => ' ') %></td>
        <td><a href ="/cr/<%= cr.id %>">Practice</a></td>
    </tr>
    <% end %>
</table>